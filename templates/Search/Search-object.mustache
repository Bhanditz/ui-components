{{> atoms/iconography/svgicons-search }}

{{> organisms/global/header}}


<div role="main" class="search-object section">

    <div class="lc">
        <div class="object-nav">
            {{>molecules/navigation/next-previous}}
        </div>
    </div>

    {{#content}}
    <div class="object-wrapper lc">

    
    <div class="object-overview">
    {{#object}}

        {{#images}}
            {{#primary}}
            <div class="object-image is-smallimage cf">
                <img src="{{preview}}"/>
            </div>


            {{/primary}}


        
        {{/images}}

        <div class="object-info cf">
            {{# title }}
            <h2 class="object-title">{{.}}</h2>
            {{/ title }}

            {{# subtitle }}
            <div class="subtitle">{{.}}</div>
            {{/ subtitle }}

            {{#creation_date}}
            <div class="date_created">
                {{.}}
            </div>
            {{/creation_date}}

            {{# description}}
            <div class="object-description">
                {{.}}
            </div>
            {{/ description}}
        </div>

        {{! Creator info }}
        {{#creator}}
        <div class="object-creator cf">

            <h3 class="subsection-label">
                {{title}}
            </h3>
            
            <div class="subsection-content">
                
                <div class="creator-name">
                    {{name}}

                    {{#life}}
                    <span class="life-dates">
                        ({{from.short}} {{#to}} â€” {{short}} {{/to}}) 
                    </span>
                    {{/life}}
                </div>

                {{#biography}}
                <div class="biography">
                    {{biography.text}}
                </div>
                {{/biography}}
            </div>

        </div>
        {{/creator}}


        {{#geo.long_and_lat}}   {{! check both present }}
            <div class="js-showhide-panel is-jshidden map-section">
            
                <h3 class="subsection-label">
                    {{geo.labels.map}}
                </h3>
                <div class="object-info">
                    <div id="map">
                        <span id="map-place-name" class="js-hidden">{{geo.placeName}}</span>
                        <div><b>{{geo.labels.longitude}}</b> {{geo.longitude}}</div>
                        <div><b>{{geo.labels.latitude}}</b>  {{geo.latitude}}</div>
                    </div>
                </div>
            </div>
            <a   class="js-showhide" 
                 href="#"
                 data-fire-on-open="showMap"
                 data-fire-on-open-params='{ "longitude":{{geo.longitude}}, "latitude": {{geo.latitude}}, "labels": { "n":"{{geo.labels.points.n}}", "s":"{{geo.labels.points.s}}", "e":"{{geo.labels.points.e}}", "w":"{{geo.labels.points.w}}" } }'
                 data-text-swap="{{labels.show_less_meta}}">{{labels.show_more_meta}}</a>
                 
        {{/geo.long_and_lat}}


		{{#meta_additional}}
        <div class="object-extradata cf">
            <div class="subsection-content">
                <div class="js-showhide-panel is-jshidden">
                    
                    <ul>
                        <li>Extra</li>
                        <li>Meta</li>
                        <li>Data</li>
                    </ul>
                </div>
            <a class="js-showhide subsection-label" href="#" data-text-swap="{{labels.show_less_meta}}">{{labels.show_more_meta}}</a>
            </div>
        </div>
		{{/meta_additional}}

    {{/object}}
    </div>
    {{! end of object info column }}


    <div class="object-actions">

        <div class="object-image-nav prototype-image">
        {{! @TODO Object image thumbnail navigation goes here }}
        </div>

        <input type="hidden" name="js_edm_is_shown_by" value="{{data.edm_is_shown_by}}"/>

        {{#object.download}}
        <div class="object-downloads">

           <a class="btn pill" href="{{primary.url}}">{{primary.text}}</a>

           {{#secondary}}
            <div class="secondary">
                Download as:
                <ul class="nav">
                {{#items}}<li><a href="{{url}}">{{text}}</a></li>{{/items}}
                </ul>
            </div>
            {{/secondary}}
        </div>
        {{/object.download}}


        {{# object.rights }}
        <div class="object-rights">
        {{license_human}}
        	<div class="object-license">{{> molecules/icons/licenses }}</div>
        </div>
        {{/ object.rights }}

        {{# object.origin }}
        <div class="object-origin">

            <a class="original_context cap" href="{{url}}">
                {{institution_name}}
                <svg class="icon icon-linkout">
                    <use xlink:href="#icon-linkout"></use>
                </svg>
            </a>

            {{#logo}}
                <img class="logo-institution" src="{{image_root}}{{logo}}" alt="{{institution_name}} logo">
            {{/logo}}

            <div class="cap">{{institution_country}}</div>

        </div>
        {{/ object.origin }}
        

        {{# object.concepts }}
        <div class="object-concepts">
	        <ul class="nav">
	            {{#items}}
	            <li><a href="{{url}}">{{text}}</a></li>
	            {{/items}}
	        </ul>
        </div>
        {{/ object.concepts }}

        {{# object.tags }}
        <div class="object-tags">
            <ul class="nav">
            {{#items}}
                    <li><a href="{{url}}" class="tag">{{text}}</a></li>
            {{/items}}
            </ul>
         </div>
        {{/ object.tags }}

        {{# object.colours }}
        <div class="object-colours">
            {{> molecules/media/colour-search }}
        </div>
        {{/ object.colours }}


		{{# object.further_actions }}
		<div class="object-furtheractions">
			{{> molecules/controls/dropdown-menu }}
		</div>
		{{/ object.further_actions }}
        
    </div>
    </div>
    {{/content}}
</div>

{{! Related itens }}
{{#content.related}}
<section class="section">
<div class="object-related lc">
    <div class="subsection-label">
        {{title}}
    </div>
    <div class="subsection-content">
    <ul>
    {{#items}}
        <li class="mlt-item">
        {{title}}
        </li>
    {{/items}}
    </ul>
    </div>
</div>
</section>
{{/content.related}}

{{> organisms/global/footer }}
