{{> atoms/iconography/svgicons-search }}
{{> organisms/global/header}}

<div role="main" class="search-object">

	<div class="object-nav">
		{{>molecules/navigation/next-previous}}

		<ul class="breadcrumbs">
			<li><a href="{{navigation.next_prev.back_url}}"><svg class="icon icon-search"><use xlink:href="#icon-search"></use></svg>{{navigation.next_prev.back_text}}</a></li>
			<li><span class="lastitem"><strong>{{content.object.title}}</strong> | {{content.object.people.creator.name}}</span></li>
		</ul>
	</div>

	{{#content}}

	<section class="object-display section">
		{{#object.media}}

				{{#primary}}

				{{#is_image}}
				<div class="object-media object-media-image">
					<img src="{{preview}}" alt="{{alt}}"/>
				</div>
				{{/is_image}}

				{{#is_video}}
				<div class="object-media object-media-video">
					{{> molecules/components/videojs/videojs }}
				</div>
				{{/is_video}}

				{{#is_text}}
				<div class="object-media object-media-text">
					Text viewer here
				</div>
				{{/is_text}}

				{{#is_audio}}
				<div class="object-media object-media-audio">
					{{> molecules/components/videojs/videojs }}
				</div>
				{{/is_audio}}

				{{/primary}}

				{{#additional}}
				<ul class="object-media-nav">
					{{#items}}
					{{#thumbnail}}
					<li><a href="{{file}}"><img src="{{thumbnail}}" alt="{{alt}}"/></a></li>
					{{/thumbnail}}
					{{/items}}
				</ul>
				{{/additional}}
			{{/object.media}}

			{{#object.download}}
			<div class="object-downloads">

				<a class="download-button btn alt" href="#object-downloads">{{ i18n.site.download }}</a>

				<div id="object-downloads" class="is-jshidden">

					{{#primary}}
					<div class="download-primary">
						<span class="label">Also available:</span>
						{{> molecules/navigation/linklist-simple }}
					</div>
					{{/primary}}

					{{#secondary}}
					<div class="download-secondary">
						
					</div>
					{{/secondary}}
					
				</div>
			</div>
			{{/object.download}}

	</section>

	{{! Main object text info section }}
	<section class="section">
	<div class="lc">
		<div class="object-overview">
			{{#object}}
			<div class="object-info cf">
				{{# title }}
					<h2 class="object-title">{{title}}</h2>
				{{/ title }}
				{{# subtitle }}
					<div class="subtitle">{{subtitle}}</div>
				{{/ subtitle }}
				{{#creation_date}}
					<div class="date_created">
						{{creation_date}}
					</div>
				{{/creation_date}}
			</div>

			{{# description}}
			<div class="data-section no-border cf">
				<h3 class="subsection-label">
					{{{ i18n.site.object.meta-label.description }}}
				</h3>
				<div class="subsection-content">
					{{description}}
				</div>
			</div>
			{{/ description}}

			{{! Creator info }}
			{{#people}}
				{{# people.content_present }}
					<div class="data-section cf">
						<h3 class="subsection-label">
							{{title}}
						</h3>
						<div class="subsection-content">
							<ul class="people">
								{{#people.creator.url}}
									<li>
										<section>
											<h4 class="data-header">{{ people.creator.title }}:</h4>
											<a href="{{people.creator.name_url}}">{{people.creator.name}}</a>
											{{# people.creator.life}}
												{{# people.creator.life.content_present}}
													<span class="life-dates">
														({{from.short}} {{#to.short}} â€” {{to.short}} {{/to.short}})
													</span>
												{{/ people.creator.life.content_present}}
											{{/ people.creator.life}}
											{{# people.creator.biography}}
												<div class="biography">
													{{people.creator.biography.text}}
												</div>
											{{/ people.creator.biography}}
										</section>
									</li>
								{{/ people.creator.url}}
								{{# people.contributor.url}}
									<li>
										<section>
											<h4 class="data-header">{{ people.contributor.title }}:</h4>
											<a href="{{people.contributor.url}}">{{people.contributor.name}}</a>
										</section>
									</li>
								{{/ people.contributor.url}}
							</ul>
						</div>
					</div>
				{{/ people.content_present }}
			{{/people}}

			{{! Place info }}
			{{#places}}
				{{# places.content_present }}
					<div class="data-section cf">
						<h3 class="subsection-label">
							{{{ i18n.site.object.meta-label.place }}}
						</h3>
						<div class="subsection-content">
							<ul class="places">
								{{#places.spatial.content_present}}
									{{#places.spatial}}
										<li>
											<section>
												<h4 class="data-header">{{ places.spatial.label }}:</h4>
												<ul class="comma-list places">
													{{# places.spatial.items }}
														<li>{{ text }}</li>
													{{/ places.spatial.items}}
												</ul>
											</section>
										</li>
									{{/ places.spatial }}
								{{/ places.spatial.content_present }}
								{{# places.coverage.content_present }}
									{{# places.coverage }}
										<li>
											<section>
												<h4 class="data-header">{{ places.coverage.label }}:</h4>
												<ul class="comma-list places">
													{{# places.coverage.items }}
														<li>{{ text }}</li>
													{{/ places.coverage.items}}
												</ul>
											</section>
										</li>
									{{/ places.coverage }}
								{{/ places.coverage.content_present }}
							</ul>
						</div>
					</div>
				{{/ places.content_present }}
			{{/places}}
			
			{{! Time info }}
			{{#times}}
				{{# times.content_present }}
					<div class="data-section cf">
						<h3 class="subsection-label">
							{{{ i18n.site.object.meta-label.time }}}
						</h3>
						<div class="subsection-content">
							<ul class="times">
								{{#times.issued.content_present}}
									{{#times.issued}}
										<li>
											<section>
												<h4 class="data-header">{{ times.issued.label }}:</h4>
												<ul class="comma-list times">
													{{# times.issued.items }}
														<li>{{ text }}</li>
													{{/ times.issued.items}}
												</ul>
											</section>
										</li>
									{{/ times.issued }}
								{{/ times.issued.content_present }}
								{{# times.temporal.content_present }}
									{{# times.temporal }}
										<li>
											<section>
												<h4 class="data-header">{{ times.temporal.label }}:</h4>
												<ul class="comma-list times">
													{{# times.temporal.items }}
														<li>{{ text }}</li>
													{{/ times.temporal.items}}
												</ul>
											</section>
										</li>
									{{/ times.temporal }}
								{{/ times.temporal.content_present }}
							</ul>
						</div>
					</div>
				{{/ times.content_present }}
			{{/times}}
			
			{{! References and relations }}
			{{#refs_rels}}
			
				{{# refs_rels.content_present }}
					<div class="data-section cf">
						<h3 class="subsection-label">
							{{{ i18n.site.object.meta-label.refs-rels }}}
						</h3>
						<div class="subsection-content">
							<ul class="refs-rels">
								{{# refs_rels.relations.content_present}}
									{{# refs_rels.relations}}
										<li>
											<section>
												<h4 class="data-header">{{ refs_rels.relations.label }}:</h4>
												<ul class="comma-list refs-rels">
												{{# refs_rels.relations.items }}
													<li>{{ text }}</li>
												{{/ refs_rels.relations.items}}
												</ul>
											</section>
										</li>
									{{/ refs_rels.relations }}
								{{/ refs_rels.relations.content_present }}
								{{# refs_rels.references.content_present }}
									{{# refs_rels.references}}
										<li>
											<section>
												<h4 class="data-header">{{ refs_rels.references.label }}:</h4>
												<ul class="comma-list refs-rels">
													{{# refs_rels.references.items }}
														<li>{{ text }}</li>
													{{/ refs_rels.references.items}}
												</ul>
											</section>
										</li>
									{{/ refs_rels.references }}
								{{/ refs_rels.references.content_present }}
							</ul>
						</div>
					</div>
				{{/ refs_rels.content_present }}
			{{/refs_rels}}

		    {{# object.concepts }}
			<div class="data-section cf">
				<h3 class="subsection-label">
					{{{ i18n.site.object.meta-label.concepts }}}
				</h3>
				<div class="subsection-content">
				
					<ul class="concepts">
						<li>
							{{# type_items }}
								<section>
									{{# type_items.label }}
										<h4 class="data-header">{{ . }}:</h4>
									{{/ type_items.label }}
									<ul class="types comma-list">
										{{# items }}
											<li class="item">{{#url}}<a href="{{.}}">{{text}}</a>{{/url}}</li>
										{{/ items }}
									</ul>
								</section>
							{{/ type_items }}
						</li>
						<li>
							{{# concept_items }}
								<section>
									{{# concept_items.label }}
										<h4 class="data-header">{{ . }}:</h4>
									{{/ concept_items.label }}
									<ul class="types comma-list">
										{{# items }}
											<li class="item">{{#url}}<a href="{{.}}">{{text}}</a>{{/url}}</li>
										{{/ items }}
									</ul>
								</section>
							{{/ concept_items }}
						</li>
						<li>
							{{# concept_subjects }}
								<section>
									{{# concept_subjects.label }}
										<h4 class="data-header">{{ . }}:</h4>
									{{/ concept_subjects.label }}
									<ul class="types comma-list">
										{{# items }}
											<li class="item">{{#url}}<a href="{{.}}">{{text}}</a>{{/url}}</li>
										{{/ items }}
									</ul>
								</section>
							{{/ concept_subjects }}
						</li>
					</ul>
				</div>
			</div>
		    {{/ object.concepts }}
		    
			{{# object.properties.content_present }}
			<div class="data-section cf">
				<h3 class="subsection-label">
					{{{ i18n.site.object.meta-label.properties }}}
				</h3>
				<div class="subsection-content">
					<ul>
						{{#object.properties.items}}
						<li>
							{{#label}}
								<b>{{ label }}</b>
							{{/label}}
							{{#url}}<a href="{{.}}">{{/url}}{{text}}{{#url}}</a>{{/url}}
						</li>
						{{/object.properties.items}}
					</ul>
				</div>
			</div>
			{{/ object.properties.content_present }}
			{{#object.dates.content_present}}
			<div class="data-section cf">
				<h3 class="subsection-label">
					{{i18n.site.object.meta-label.dates}}
				</h3>
				<div class="subsection-content">
					<ul>
						{{#object.dates.items}}
						<li>
							{{#label}}
								<b>{{.}}</b>
							{{/label}}
							{{#url}}<a href="{{.}}">{{/url}}{{text}}{{#url}}</a>{{/url}}
						</li>
						{{/object.dates.items}}
					</ul>
				</div>
			</div>
			{{/object.dates.content_present}}
			{{#meta_additional}}
			{{#geo.long_and_lat}}	{{! check both present }}
			<a	class="scroll-trigger" 
				enabled="true"
				data-fire-on-open="showMap"
				data-fire-on-open-params='{ 
				"longitude":{{geo.longitude}}, "latitude": {{geo.latitude}}, "labels": { "n":"{{geo.labels.points.n}}", "s":"{{geo.labels.points.s}}", "e":"{{geo.labels.points.e}}", "w":"{{geo.labels.points.w}}" }
				}'
				></a>
			<div class="map-section">
				<h3 class="subsection-label">
					{{i18n.site.object.meta-label.location}}
				</h3>
				<div class="object-info">
					<span id="map-place-name">{{geo.placeName}}</span>
					<div id="map">
						<div><b>{{geo.labels.longitude}}</b> {{#geo.longitude}}{{.}}{{/geo.longitude}}</div>
						<div><b>{{geo.labels.latitude}}</b> {{#geo.latitude}}{{.}}{{/geo.latitude}}</div>
					</div>
				</div>
			</div>
			{{/geo.long_and_lat}}
			{{/meta_additional}}
			{{#object.provenance.content_present}}
			<div class="data-section cf">
				<h3 class="subsection-label">
					{{i18n.site.object.meta-label.source}}
				</h3>
				<div class="subsection-content">
					<ul>
						{{#object.provenance.items}}
						<li>
							{{#label}}
							<b>{{ label }}</b>
							{{/label}}
							{{#url}}
							<a href="{{.}}">
							{{/url}}
							{{text}}
							{{#url}}
							</a>
							{{/url}}
						</li>
						{{/object.provenance.items}}
					</ul>
				</div>
			</div>
			{{/object.provenance.content_present}}
			{{/object}}
		</div>
		{{! end of object info column }}
		<div class="object-actions cf">
			<input type="hidden" name="js_edm_is_shown_by" value="{{data.edm_is_shown_by}}"/>
			{{# object.media.primary.rights }}
			<div class="object-rights">
				{{license_human}}
				<div class="object-license">{{> molecules/icons/licenses }}</div>
			</div>
			{{/ object.media.primary.rights }}
			{{# object.origin }}
			<div class="object-origin">
				<h4>{{{ i18n.site.object.meta-label.provided-by }}}</h4>
				{{#logo}}
				<a href="{{url}}"><img class="logo-institution" src="{{image_root}}{{logo}}" alt="{{institution_name}} logo"></a>
				{{/logo}}
				<a class="original_context cap" href="{{url}}">
					{{institution_name}}
					<svg class="icon icon-linkout">
						<use xlink:href="#icon-linkout"></use>
					</svg>
				</a>
				<span class="cap">{{institution_country}}</span>
			</div>
			{{/ object.origin }}
			{{# object.tags }}
			<div class="object-tags">
				<ul class="nav">
					{{#items}}
					<li><a href="{{url}}" class="tag">{{text}}</a></li>
					{{/items}}
				</ul>
			</div>
			{{/ object.tags }}
			{{# object.colours }}
			<div class="object-colours">
				{{> molecules/controls/colour-search }}
			</div>
			{{/ object.colours }}
			{{# object.further_actions }}
			<div class="object-furtheractions">
				{{> molecules/controls/dropdown-menu }}
			</div>
			{{/ object.further_actions }}
		</div>
		{{! end object actions }}
	</div>

	<div class="lc data-border">
    	{{#content.similar}}
			<div class="data-section no-border">
				<div class="mlt cf">
					<div class="subsection-label">
						{{title}}
						<a	class="scroll-trigger" 
							enabled="true"
							data-fire-on-open="showMLT"
						></a>
					</div>
					<div class="subsection-content">
						<div class="js-mlt">
							<ul class="cf">
								{{#items}}
									<li class="mlt-item">
										<div class="mlt-img-div height-to-width" style="background-image: url({{img.src}})">
											<div class="inner"><a class="link" href="{{url}}">&nbsp;</a></div>
										</div>
										<span class="mlt-title">
											<a href="{{url}}">{{title}}</a>
										</span>
									</li>
								{{/items}}
							</ul>
						</div>
					</div>
				</div>
				<div class="show-more-mlt"><a href="{{more_items_query}}">{{{ i18n.global.more.load-more }}}&#8230;</a></div>
			</div>
		{{/content.similar}}
    </div>			
	</section>
	{{/content}}
</div>

{{> organisms/global/footer }}