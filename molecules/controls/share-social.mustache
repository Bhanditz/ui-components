
<ul class="social-share">
	{{#facebook}}
	<li>
	<a class="icon-social" href="https://www.facebook.com/sharer/sharer.php?u={{url}}" title="Share to Facebook" target="_blank">
		<svg class="icon icon-facebook">
			<use xlink:href="#icon-facebook"></use>
		</svg>
		<span class="share-name is-vishidden">Facebook</span>
	</a>
	</li>
	{{/facebook}}

	{{#twitter}}
	<li>
	<a href="https://twitter.com/intent/tweet?text={{url}}" title="Share to Twitter" target="_blank">
		<svg class="icon icon-twitter">
			<use xlink:href="#icon-twitter"></use>
		</svg>
		<span class="share-name is-vishidden">Twitter</span>
	</a>
	</li>
	{{/twitter}}

	{{#pinterest}}
	<li>
	<a class="icon-social" href="http://pinterest.com/pin/create/button/?url={{url}}" title="Share to Pinterest" target="_blank">
		<svg class="icon icon-pinterest">
			<use xlink:href="#icon-pinterest"></use>
		</svg>
		<span class="share-name is-vishidden">Pinterest</span>
	</a>
	</li>
	{{/pinterest}}

	{{#googleplus}}
	<li>
	<a href="https://plus.google.com/share?url={{url}}" title="Share to Google+" target="_blank">
		<svg class="icon icon-googleplus">
			<use xlink:href="#icon-googleplus"></use>
		</svg>
		<span class="share-name is-vishidden">Google</span>
	</a>
	</li>
	{{/googleplus}}
</ul>