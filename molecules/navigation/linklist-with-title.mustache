<div class="linklist l-linklist {{ styleModifier }}">
<div class="inner">
	{{# title }}
    <h4 class="title">{{ title }}</h4>
	{{/ title }}
	{{^ title }}
    <h4 class="title">Links</h4>
	{{/ title }}

    <ul>
    {{# items}}
    	<li class="cf">
        <a href="{{url}}">
            {{#text}}<span class="link-text">{{text}}</span> {{/text}}
            {{#number}}<span class="link-number">{{number}}</span>{{/number}} 
            {{#date}}<span class="link-date">{{date}}</span>{{/date}}
        </a>
        </li>
    {{/ items}}
	</ul>
</div>
</div>