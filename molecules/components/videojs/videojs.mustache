{{#items}}
{{# is_audio }}
<audio class="audio-js vjs-default-skin{{#is_current}} is-current{{/is_current}}" width="640" height="264" poster="{{ thumbnail }}" controls {{# technical_metadata.tech_order }}data-tech-order="{{ technical_metadata.tech_order }}"{{/ technical_metadata.tech_order }}>
  <source src="{{ download.url }}" type="{{ technical_metadata.mime_type }}">
  <p class="no-js">{{ i18n.global.requires_javascript }}</p>
</audio>
{{/ is_audio }}
{{# is_video }}
<video class="video-js vjs-default-skin{{#is_current}} is-current{{/is_current}}" width="640" height="264" poster="{{ thumbnail }}" controls {{# technical_metadata.tech_order }}data-tech-order="{{ technical_metadata.tech_order }}"{{/ technical_metadata.tech_order }}>
  <source src="{{ download.url }}" type="{{ technical_metadata.mime_type }}">
  <p class="no-js">{{ i18n.global.requires_javascript }}</p>
</video>
{{/ is_video }}
{{/items}}