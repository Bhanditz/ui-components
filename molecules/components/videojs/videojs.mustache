{{# audio }}
<audio class="audio-js vjs-default-skin{{#is_current}} is-current{{/is_current}}" width="100%" preload="none" controls>
  <p class="no-js">{{i18n.global.requires_javascript }}</p>
</audio>
{{/ audio }}
{{# video }}
<video class="video-js vjs-default-skin{{#is_current}} is-current{{/is_current}}" width="auto" height="auto" preload="none" controls>
  <p class="no-js">{{ i18n.global.requires_javascript }}</p>
</video>
{{/ video }}
{{# test }}
<script>
  var media_item = {
     {{#play_url}}url: "{{play_url}}",{{/play_url}}
     {{#technical_metadata.mime_type}}mime_type: "{{technical_metadata.mime_type}}",{{/technical_metadata.mime_type}}
     {{#audio}}data_type: "audio"{{/audio}}
     {{#video}}data_type: "video"{{/video}}
  }
</script>
{{/ test }}

